#:import Factory kivy.factory.Factory

<PopupTest>
    text: 'lalalal'
    size_hint: [0.4,0.4]
    GridLayout:
        cols: 2
        Label:
            text: "project"

    Button:
        text: 'sadf'
        on_press: root.dismiss()

<RootWidget>
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint: 1, 0.2
            text: "YOU ARE NOT CONNECTED"
        GridLayout:
            cols: 4
            size_hint: 1, 0.3
            Button:
                id: connect
                text: 'connect to job'
                on_press: Factory.PopupTest().open()
            Button:
                id: disconnect
                text: 'disconnect'
                on_press: root.changeProjects()
                on_release: root.updateJobs(joblist)
            Button:
                id: new_job
                text: 'new job'
            Button:
                id: kill_job
                text: 'kill job'
        JobList:
            id: joblist
            cols: 1
            size_hint: 1, 0.2
        Label:
            text: 'Log output box'